<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- 【Androidマニフェストの権限】ここから -->
        <!-- TODO: アプリに必要な権限をここに指定してください。必要のない権限はコメント化するか、削除してください。 -->

        <!-- インターネット接続 -->
        <uses-permission android:name="android.permission.INTERNET" />

        <!-- カメラ -->
        <uses-permission android:name="android.permission.CAMERA" />
        <uses-feature android:name="android.hardware.camera" android:required="false" />

        <!-- マイク -->
        <uses-permission android:name="android.permission.RECORD_AUDIO" />
        <uses-feature android:name="android.hardware.microphone" android:required="false" />

        <!-- ストレージ（Android 12以下） -->
        <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" android:maxSdkVersion="32" />
        <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" android:maxSdkVersion="29" />

        <!-- ストレージ（Android 13以上） -->
        <uses-permission android:name="android.permission.READ_MEDIA_IMAGES" tools:targetApi="tiramisu" />
        <uses-permission android:name="android.permission.READ_MEDIA_VIDEO" tools:targetApi="tiramisu" />
        <uses-permission android:name="android.permission.READ_MEDIA_AUDIO" tools:targetApi="tiramisu" />

        <!-- 音量設定 -->
        <uses-permission android:name="android.permission.MODIFY_AUDIO_SETTINGS" />

        <!-- バイブレーション -->
        <uses-permission android:name="android.permission.VIBRATE" />
    <!-- 【Androidマニフェストの権限】ここまで -->

    <queries>
        <intent>
            <!-- 次の行は、TTS (Text-To-Speech; 音声合成) サービスを使うときに必要 -->
            <action android:name="android.intent.action.TTS_SERVICE" />
        </intent>
    </queries>

    <application
        android:allowBackup="false"
        android:fullBackupContent="false"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:icon="@mipmap/ic_launcher"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:usesCleartextTraffic="false"
        tools:targetApi="s"
        android:requestLegacyExternalStorage="true"
        android:largeHeap="true"
        android:hardwareAccelerated="true"
    >
        <!--
            重要なメモリ最適化設定:

            1. android:largeHeap="true"
               - アプリに割り当てられる最大ヒープサイズを増やす
               - 動画録画のような大容量メモリを使う処理に必須
            2. android:hardwareAccelerated="true"
               - ハードウェアアクセラレーションを有効化
               - WebViewのレンダリングパフォーマンスが向上
        -->
        <activity
            android:name=".MainActivity"
            android:theme="@style/Theme.SimpleCamera.Splash"
            android:exported="true"
            android:configChanges="orientation|screenSize|keyboardHidden"
            android:windowSoftInputMode="adjustResize"
            android:screenOrientation="fullUser"
        >
            <!--
                android:configChanges
                - 画面回転などでActivityが再起動されるのを防ぐ
                - メモリリークやデータ損失を防止

                android:windowSoftInputMode
                - キーボード表示時のレイアウト調整

                android:screenOrientation
                - 画面の向き
            -->
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- WebViewのプロセス分離を有効化（Android 8.0+） -->
        <meta-data
            android:name="android.webkit.WebView.EnableSafeBrowsing"
            android:value="true" />

        <!--
            WebViewのマルチプロセス有効化（Android 8.0+）
            レンダラープロセスが別プロセスで動作し、
            メインアプリがクラッシュしにくくなる
        -->
        <meta-data
            android:name="android.webkit.WebView.MetricsOptOut"
            android:value="false" />

        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="${applicationId}.fileprovider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_paths" />
        </provider>
    </application>
</manifest>